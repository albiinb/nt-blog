{
  "$schema": "https://json.schemastore.org/prettierrc",
  "arrowParens": "always",
  "bracketSpacing": true,
  "plugins": ["@trivago/prettier-plugin-sort-imports"],
  "importOrder": [
    "react",
    "next/*",
    "<THIRD_PARTY_MODULES>",
    "@/components",
    "@/constants",
    "@/hooks",
    "@/providers",
    "@/services",
    "@/lib",
    "@/styles/*",
    "^./(.*)$",
    "/public/*"
  ],
  "importOrderSortSpecifiers": true,
  "trailingComma": "none",
  "tabWidth": 2,
  "semi": false,
  "printWidth": 90,
  "singleQuote": true,
  "jsxSingleQuote": true,
  "proseWrap": "always"
}
